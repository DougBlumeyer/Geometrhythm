<div class="modal">
  <form class="modal-form">

    <span class="modal-close js-modal-close">&times;</span>

    <h1>Welcome</h1>

    <p>Please sign in to continue.</p>

    <div class="input">
      <label for="form-email">Email</label>
      <input type="text" id="form-email">
    </div>

    <div class="input">
      <label for="form-password">Password</label>
      <input type="password" id="form-password">
    </div>

    <div class="submit">
      <button class="btn btn-primary btn-lg">Sign In</button>
      <span class="button-alternative">or <strong class="js-modal-close">Cancel</strong></span>
    </div>

  </form>
  <div class="modal-screen js-modal-close"></div>
</div>

<script>
  $(function(){
    $("body").on("click", ".js-modal-open", function(event){
      event.preventDefault();
      $(".modal").addClass("is-open");
    });
    $("body").on("click", ".js-modal-close", function(event){
      event.preventDefault();
      $(".modal").removeClass("is-open");
    });
  });
</script>

