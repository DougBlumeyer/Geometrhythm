</head>
<body>

  <%= audio_tag "clave.wav" %>
  <%= audio_tag "clave.wav" %>
  <%= audio_tag "clave.wav" %>
  <%= audio_tag "clave.wav" %>

  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <a class="navbar-brand" href="#">
          <%= image_tag "header_logo_dark.png", size: "292x45"%>
        </a>
        <!--<i class="glyphicon glyphicon-log-in"></i>-->
        <ul class="nav navbar-nav navbar-right">

          <% if logged_in? %>
            <%= "Signed in as #{ current_user.email}" %>
            <%= button_to "Sign Out", session_url, method: :delete, class: "btn btn-primary btn-sm" %>
          <% else %>
            <%= button_to "Sign In", new_session_url, method: :get, class: "btn btn-primary btn-sm" %>
          <% end %>


          <span style="padding: 0px 15px">
          <% if !logged_in? %>
            <%= link_to "or sign up", new_user_url %>
          <% end %>
          </span>
        <ul>
      </div>
    </div>
  </nav>

<%= render "layouts/flash_notices" %>

<%= yield %>

</body>
</html>
