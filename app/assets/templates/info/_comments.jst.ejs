<br>
<% if (rhythm.get("comments").length > 0) { %>
  Comments:
  <ol>
    <% rhythm.get("comments").forEach(function(comment) {  %>
      <li>
        <%= JST['info/_rec_comments']({comment: comment, enabled: enabled}) %>
      </li>
    <% }) %>
  </ol>
<% } %>

<% if (enabled) { %>
  <form class="add-comment">
    <input type="text" name="comment[body]">
    <input type="submit" value="Comment">
  </form>
<% } %>
